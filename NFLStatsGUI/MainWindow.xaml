<Window x:Class="MyWPFApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="NFL Stats Processor" Height="523" Width="807">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="70" />
            <RowDefinition />
        </Grid.RowDefinitions>

        <Rectangle Grid.Row="0" Fill="LightGray" />

        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>

            <Grid Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Row="0" Text="Team Number:  " VerticalAlignment="Center" HorizontalAlignment="Right" />
                <TextBox x:Name="TeamNumInput"  Grid.Row="0" Grid.Column="1" Width="100" Height="20" VerticalAlignment="Center" HorizontalAlignment="Left" />

                <TextBlock Grid.Row="1" Text="Game Number: " VerticalAlignment="Center" HorizontalAlignment="Right"/>
                <TextBox x:Name="GameNumInput" Grid.Row="1" Grid.Column="1" Width="100" Height="20" VerticalAlignment="Center" HorizontalAlignment="Left" />

            </Grid>

            <Button Grid.Column="1" Content="Show Stats" Width="100" Height="30" Click="ShowStatsButton_Click" />

        </Grid>

        <ScrollViewer Grid.Row="1" HorizontalScrollBarVisibility="Auto" 
              VerticalScrollBarVisibility="Auto"
              >
            <TextBlock x:Name="OutputTextBlock" FontFamily="Consolas" Margin="10, 10, 10, 10"/>
        </ScrollViewer>

    </Grid>
</Window>
